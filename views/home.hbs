<div class="row">
    {{#each posts}}
        <div class="my-4 col-12 col-md-6 col-xl-4">
            <div class="card">
                <h5 class="card-header">{{ title }}</h5>
                <div class="card-body">
                    <p class="card-text">{{ description }}</p>
                    <a href="/post/{{ _id }}"> See more...</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>

{{#if noPosts}}
        <h2 class="text-center">You will be the first who <a href="/add-post">add post</a> here</h2>
{{/if}}